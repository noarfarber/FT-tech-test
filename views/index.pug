doctype html 
html 
	head 
		title FT Headlines
		link(rel='stylesheet' type="text/css" href='/style.css')
		link(rel='preconnect' href='https://fonts.googleapis.com')
		link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
		link(href='https://fonts.googleapis.com/css2?family=Barlow:wght@100&family=Charis+SIL&display=swap' rel='stylesheet')
		script(src="https://kit.fontawesome.com/e87c96e8b2.js" crossorigin="anonymous")
	body 
		div(id='search-box')
			input(
				type='text'
				id='user-input'
				placeholder='Search the FT'
				value=''
			)
			button(
				type='submit'
				id='search-button'
				i class='fa-solid fa-magnifying-glass'
			)
		h1 #{title}
		ul
			each article in articles 
				section
					li= article[0]
						p= article[2]		
		script. 
			const searchButton = document.querySelector('#search-button');
			searchButton.addEventListener('click', () => {
				let userKeyword = document.querySelector('#user-input').value;
				let url = `http://localhost:3000/search/${userKeyword}`
				let baseUrl = 'http://localhost:3000'
				if (userKeyword === "") {
					window.open(baseUrl, "_self")
				} else {
					window.open(url, "_self")
				}
			})
			